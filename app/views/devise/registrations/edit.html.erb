    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<%= render "shared/header" %>

  <div class="main">
    <div class="container">

      <div class="profile-box">
      <div class="box-title">
        プロフィール編集
      </div>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "ニックネーム" %><br />
          <%= f.text_field :nickname, class:"input-default", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="actions">
          <%= f.submit "更新する", class:"btn action-btn" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "マイページに戻る", :back, class:"btn action-btn" %>
      </div>

    </div>
  </div>

<%= render "shared/footer" %>